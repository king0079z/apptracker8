{
  "name": "enterprise-monitor-client",
  "version": "1.0.0",
  "description": "Enterprise Monitor Client - Monitors software usage on individual computers",
  "main": "enterprise-client.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron": "^27.1.3",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "electron-log": "^5.0.1"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.enterprise.monitor.client",
    "productName": "Enterprise Monitor Client",
    "directories": {
      "output": "../dist-client"
    },
    "files": [
      "**/*",
      "!**/*.map"
    ],
    "win": {
      "target": "dir",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dir",
      "icon": "icon.png"
    },
    "linux": {
      "target": "dir",
      "icon": "icon.png"
    }
  }
}