{
  "source": {
    "include": [
      "src/main",
      "README.md"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "dist-client",
      "tests"
    ],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "destination": "docs/api",
    "recurse": true,
    "template": "node_modules/docdash"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "outputSourceFiles": true,
      "includeDate": false
    }
  },
  "metadata": {
    "title": "Enterprise Software Monitor API Documentation",
    "version": "1.0.0"
  },
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  }
}