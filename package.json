{
  "name": "enterprise-software-monitor",
  "version": "1.0.0",
  "description": "Enterprise Software Usage Monitor and Optimizer - Track and optimize software usage across your organization",
  "main": "src/main/main.js",
  "homepage": "https://github.com/your-company/enterprise-software-monitor",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-company/enterprise-software-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/your-company/enterprise-software-monitor/issues"
  },
  "author": {
    "name": "Your Company Name",
    "email": "support@yourcompany.com",
    "url": "https://yourcompany.com"
  },
  "license": "Proprietary",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "dev:watch": "cross-env NODE_ENV=development nodemon --exec electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:mac-universal": "electron-builder --mac --universal",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "dist": "npm run clean && npm run build:all",
    "dist:win": "npm run clean && npm run build:win",
    "dist:mac": "npm run clean && npm run build:mac",
    "dist:linux": "npm run clean && npm run build:linux",
    "postinstall": "electron-builder install-app-deps && npm run rebuild",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "clean": "rimraf dist dist-client coverage",
    "clean:all": "npm run clean && rimraf node_modules package-lock.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,css,html}\"",
    "client:build": "cd enterprise-client && npm run build",
    "installer:build": "cd client-installer && npm run build",
    "docs:generate": "jsdoc -c jsdoc.json",
    "release": "npm run test && npm run lint && npm run dist",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release"
  },
  "keywords": [
    "enterprise",
    "monitoring",
    "software",
    "usage",
    "tracking",
    "optimization",
    "license",
    "management",
    "network",
    "scanner",
    "desktop",
    "electron"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "sqlite3": "^5.1.6",
    "sudo-prompt": "^9.2.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ip": "^1.1.8",
    "network-list": "^1.1.5",
    "systeminformation": "^5.21.20",
    "node-schedule": "^2.1.1",
    "archiver": "^6.0.1",
    "csv-writer": "^1.6.0",
    "pdfkit": "^0.14.0",
    "chart.js": "^4.4.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-rebuild": "^3.2.9",
    "electron-devtools-installer": "^3.2.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.5",
    "electron-mock-ipc": "^0.3.12",
    "playwright": "^1.40.0",
    "rimraf": "^5.0.5",
    "jsdoc": "^4.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@types/node": "^20.10.5"
  },
  "build": {
    "appId": "com.enterprise.monitor",
    "productName": "Enterprise Software Monitor",
    "directories": {
      "output": "dist",
      "buildResources": "build-resources"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json",
      "!**/*.ts",
      "!**/*.map",
      "!**/*.spec.js",
      "!**/*.test.js",
      "!**/test/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!**/.git/**",
      "!**/.github/**",
      "!**/docs/**"
    ],
    "asarUnpack": [
      "node_modules/sqlite3/**/*",
      "node_modules/sudo-prompt/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable"
        }
      ],
      "icon": "build-resources/icon.ico",
      "publisherName": "Your Company Name",
      "requestedExecutionLevel": "requireAdministrator",
      "certificateFile": "build-resources/cert.pfx",
      "certificatePassword": "${CERT_PASSWORD}",
      "rfc3161TimeStampServer": "http://timestamp.digicert.com",
      "signAndEditExecutable": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build-resources/installer-icon.ico",
      "uninstallerIcon": "build-resources/uninstaller-icon.ico",
      "installerHeaderIcon": "build-resources/header-icon.ico",
      "license": "LICENSE.txt",
      "warningsAsErrors": false,
      "runAfterFinish": true,
      "include": "build-resources/installer.nsh",
      "perMachine": true
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "mac": {
      "category": "public.app-category.business",
      "icon": "build-resources/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build-resources/entitlements.mac.plist",
      "entitlementsInherit": "build-resources/entitlements.mac.plist",
      "type": "distribution",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64", "universal"]
        },
        {
          "target": "pkg"
        },
        {
          "target": "zip"
        }
      ],
      "darkModeSupport": true,
      "notarize": {
        "teamId": "${APPLE_TEAM_ID}"
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "background": "build-resources/dmg-background.png",
      "icon": "build-resources/volume-icon.icns",
      "iconSize": 80,
      "title": "${productName} ${version}",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb"
        },
        {
          "target": "rpm"
        },
        {
          "target": "snap"
        }
      ],
      "icon": "build-resources/icon.png",
      "category": "Utility;System;Monitor",
      "synopsis": "Monitor and optimize software usage",
      "description": "Enterprise Software Monitor helps organizations track and optimize software usage across all computers",
      "desktop": {
        "Name": "Enterprise Software Monitor",
        "Comment": "Monitor and optimize software usage across your enterprise",
        "Categories": "Utility;System;Monitor;",
        "StartupNotify": "true",
        "Terminal": "false"
      }
    },
    "appImage": {
      "license": "LICENSE.txt",
      "artifactName": "${productName}-${version}.${ext}",
      "systemIntegration": "ask"
    },
    "deb": {
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libuuid1",
        "libsecret-1-0",
        "libasound2"
      ],
      "recommends": [
        "pulseaudio"
      ],
      "packageCategory": "utils",
      "priority": "optional"
    },
    "rpm": {
      "depends": [
        "gtk3",
        "libnotify",
        "nss",
        "libXScrnSaver",
        "libXtst",
        "xdg-utils",
        "at-spi2-core",
        "libuuid",
        "libsecret"
      ]
    },
    "snap": {
      "grade": "stable",
      "summary": "Enterprise Software Usage Monitor"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "your-company",
        "repo": "enterprise-software-monitor",
        "vPrefixedTagName": true,
        "releaseType": "release",
        "private": false
      }
    ],
    "protocols": [
      {
        "name": "Enterprise Monitor Protocol",
        "schemes": ["enterprisemonitor"]
      }
    ],
    "compression": "maximum",
    "electronLanguages": ["en", "es", "fr", "de", "pt", "zh-CN", "ja"]
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/renderer/**",
      "!**/*.min.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/dist-client/"
    ],
    "moduleFileExtensions": ["js", "json", "node"],
    "transform": {
      "^.+\\.js$": "<rootDir>/tests/transform.js"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "prettier --write"],
    "*.{json,css,html,md}": ["prettier --write"]
  }
}