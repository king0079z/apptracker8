# .env.example - Copy to .env and configure
# This file contains environment variables for the Enterprise Software Monitor

# Application Environment
NODE_ENV=production

# Enterprise Server Configuration
ENTERPRISE_PORT=3443
ENTERPRISE_API_KEY=your-secure-api-key-here
ENTERPRISE_SERVER_URL=http://localhost:3443

# Build Configuration
CERT_PASSWORD=your-certificate-password
APPLE_TEAM_ID=your-apple-team-id

# Auto-Update Configuration
GITHUB_TOKEN=your-github-token-for-private-repos
UPDATE_FEED_URL=https://github.com/your-company/enterprise-software-monitor/releases

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Database
DB_RETENTION_DAYS=90

# Network Scanner
SCAN_TIMEOUT=5000
MAX_CONCURRENT_SCANS=50

# Development Only
DEV_TOOLS=false
HOT_RELOAD=false